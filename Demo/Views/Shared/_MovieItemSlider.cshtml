<div class="movie-item">
    <div class="mv-img">
        <img src="@($"https://image.tmdb.org/t/p/original{Model.PosterPath}")" alt="@Model.Title image" width="285" height="437">
    </div>
    <div class="title-in">
        <div class="cate">
            <span class="blue">@Model.OriginalLanguage</span>
        </div>
        <h6><a asp-action="MovieDetails" asp-controller="Movies" asp-route-id="@Model.Id">@Model.Title</a></h6>
        <p><i class="ion-android-star"></i><span>@Model.VoteAverage</span> /10</p>
    </div>


</div>