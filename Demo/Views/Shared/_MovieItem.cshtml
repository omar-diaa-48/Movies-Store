
@model SearchMovie

@{
    Movie movie = await MovieLoadApi.LoadApi(Model.Id);
 }
<div class="movie-item">
    <div class="mv-img">
        <a href="#"><img src="@($"https://image.tmdb.org/t/p/original{Model.PosterPath}") " alt="@Model.Title image" width="285" height="437"></a>
    </div>
    <div class="title-in">
        <div class="cate">
            <span class="blue"><a href="#">@movie.Genres[0].Name</a></span>
        </div>
        <h6><a asp-action="MovieDetails" asp-controller="Movies" asp-route-id="@Model.Id">@Model.Title</a></h6>
        <p><i class="ion-android-star"></i><span>@movie.VoteAverage</span> /10</p>
    </div>
</div>