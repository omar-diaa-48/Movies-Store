
@{
    Layout = "_SideLayout";
    ViewData["Title"] = "LogIn";

    var ExternalLogins = ViewBag.ExternalLogins;
}



<h1>Log In</h1>

<h4>Customer</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/User/Login" method="post">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input name="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-group-lg" />
                <a href="\Identity\Account\ExternalLogin" class="btn btn-primary">Use another services</a>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



